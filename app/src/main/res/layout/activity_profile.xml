<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_button"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">
    <!--We can add a background pic instead of the
     background color. But have to find a good enough pic
     and spend some time color coordinating everything.
     There is a sample pic called the_library_by_andyhep.jpg
      so if you want to use it make some changes to color scheme.
       Or get another pic.-->


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/some_people"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />


    <TextView
        android:paddingTop="14dp"
        android:id="@+id/family_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:text="@string/name" />

    <TextView
        android:id="@+id/nav_email"
       android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textStyle="italic"/>


</LinearLayout>

